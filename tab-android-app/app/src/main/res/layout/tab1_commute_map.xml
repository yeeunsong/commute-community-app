<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Tab1.Frag1">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/google_map"
        android:name= "com.google.android.gms.maps.SupportMapFragment"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/commute_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/google_map"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/green"
        android:padding="9dp"
        android:text="Commute"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:icon="@drawable/ic_action_name"
        app:iconGravity="textStart"
        app:iconPadding="3sp"
        app:iconSize="28dp" />

    <TextView
        android:layout_marginTop="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interval_time"
        android:layout_below="@id/commute_button"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Total work time 0 hours"/>
    <TextView
        android:layout_marginTop="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commute_time"
        android:layout_below="@id/interval_time"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="Arrival time: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leave_time"
        android:layout_below="@id/commute_time"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="Leave time: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalcommute"
        android:layout_below="@id/leave_time"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>
